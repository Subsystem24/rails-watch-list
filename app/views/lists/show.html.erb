<div class="container">
  <div class="navbar-lewagon">
    <%= image_tag "logo.png", alt: "Le Wagon", width: 150, height: 40 %>
    <div class="list_button">
      <p class="mb-0 align-self-center"><%= link_to "My Lists", lists_path%></p>
      <p class="mb-0 align-self-center"><%= link_to "New list", new_list_path%></p>
    </div>
  </div>

  <div class="banner">
      <h2 class="title"><%= @list.name %></h2>
  </div>
  <div class="navbar-lewagon">
    <h3><%= @list.name %> movie list</h3>
    <%= link_to "Add a movie",  new_list_bookmark_path(@list), class: "btn btn-dark" %>
  </div>

  <h2>Movies</h2>

  <% if !@list.bookmarks.empty? %>
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
          <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.comment %></p>
          </div>
              <h2 class="card-trip-pricing"><%= link_to "Delete", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h2>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
